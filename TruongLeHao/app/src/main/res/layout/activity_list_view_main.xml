<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:layout_height="match_parent"
    tools:context=".ListViewMainActivity">

    <Button

        android:id="@+id/btnListView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:onClick="ListView1"
        android:text="ListView1"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btnListView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:onClick="ListView2"
        android:text="ListView2"
        tools:ignore="OnClick" />
    <Button
        android:id="@+id/btnListView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:onClick="ListView3"
        android:text="ListView3"
        tools:ignore="OnClick" />

</LinearLayout>